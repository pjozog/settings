! Caps Lock is control
clear lock
clear control
keycode 66 = Control_L
add control = Control_L Control_R

! clear modifiers for Super
clear mod4

! clear modifiers for Alt
clear mod1

! tilde is escape
keycode 49 = Escape

! Escape is Super_L
keycode 9 = Super_L

! Right super is tilde
keycode 133 = grave asciitilde

! Fuckery to get i3 + xterm to work
keycode 108 = Super_R
keycode 109 = Alt_R

! Left Alt and (whatever 109 is) is mod1
add mod1 = Alt_L
add mod1 = Alt_R

! Right alt is mod4
add mod4 = Super_R
